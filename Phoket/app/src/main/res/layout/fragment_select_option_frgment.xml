<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.eattle.phoket.SelectOptionFragment"
    android:background="@color/colorPrimaryLight"
    android:orientation="vertical"
    android:gravity="bottom|right">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/fab_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="스마트폰에 스토리 내보내기"
            android:id="@+id/textView4"
            android:layout_gravity="center_vertical" />
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabLocal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:src="@drawable/ic_share_white_24dp"
            app:fabSize="mini"
            android:layout_marginRight="@dimen/fabmini_margin"
            android:layout_marginLeft="@dimen/fabmini_margin" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/fab_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="공유"
            android:id="@+id/textView3"
            android:layout_gravity="center_vertical" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:src="@drawable/ic_share_white_24dp"
            app:fabSize="mini"
            android:layout_marginRight="@dimen/fabmini_margin"
            android:layout_marginLeft="@dimen/fabmini_margin" />
    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabExit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:src="@mipmap/ic_close_white_24dp"
        app:backgroundTint="@color/secondary"
        android:layout_marginRight="@dimen/fab_margin"
        android:layout_marginBottom="@dimen/fab_margin" />

</LinearLayout>
