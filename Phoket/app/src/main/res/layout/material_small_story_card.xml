<?xml version="1.0" encoding="utf-8"?>
<com.eattle.phoket.Card.view.SmallStoryCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"

    style="@style/MainLayout">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <com.fmsirvent.ParallaxEverywhere.PEWImageView
            android:id="@+id/smallStoryImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:reverse="reverseBoth"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/interactionEffect"
            android:background="@drawable/ripple_button" />


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_gravity="bottom"
            android:background="@color/colorControlHighlight">

            <com.fmsirvent.ParallaxEverywhere.PEWTextView
                android:id="@+id/smallStoryName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#ffffff"
                android:textSize="16dp"
                android:layout_weight="1"
                android:text="jhkk"
                android:layout_marginLeft="8dp"
                app:block_parallax_y = "true"
                app:parallax_x="100dp"
                android:gravity="center_vertical|center_horizontal" />

            <com.fmsirvent.ParallaxEverywhere.PEWTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:id="@+id/smallStoryItemNum"
                android:textColor="#ffffff"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="8dp"
                android:layout_gravity="bottom" />

        </LinearLayout>


    </FrameLayout>

</com.eattle.phoket.Card.view.SmallStoryCardView>