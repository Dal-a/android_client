<?xml version="1.0" encoding="utf-8"?>
<com.example.ga.phoketdesign.card.BigStoryCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    style="@style/MainLayout"
    android:clickable="true"
    >


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="250dp">


        <com.fmsirvent.ParallaxEverywhere.PEWImageView
            android:id="@+id/bigStoryImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:reverse="reverseBoth"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView2"
            android:background="@drawable/ripple_button" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="top">

            <com.fmsirvent.ParallaxEverywhere.PEWTextView
                android:id="@+id/bigStoryName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="15dp"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:text="Eattle과 함께"
                android:background="#77000000" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bigStoryDate"
                android:textColor="#ffffff"
                android:layout_gravity="right|bottom"
                android:text="2015.5.6"
                android:layout_margin="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6장"
                android:id="@+id/bigStoryItemNum"
                android:layout_gravity="left|bottom"
                android:textColor="#ffffff"
                android:layout_margin="8dp" />
        </LinearLayout>


    </FrameLayout>

</com.example.ga.phoketdesign.card.BigStoryCardView>