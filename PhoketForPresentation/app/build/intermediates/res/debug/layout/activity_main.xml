<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_above="@+id/toUSB"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.eattle.phoket.MainActivity" />

    <Button
        android:id="@+id/toUSB"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@mipmap/usbbackground"
        android:onClick="onClick"
        android:text="USB를 확인하세요"
        android:textColor="#ffffff"
        android:textSize="15dp" />
</RelativeLayout><!-- From: file:/C:/Users/dh_st_000/Documents/eattle_client/PhoketForPresentation/app/src/main/res/layout/activity_main.xml -->